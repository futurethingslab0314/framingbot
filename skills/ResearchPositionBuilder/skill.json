{
    "skill_name": "ResearchPositionBuilder",
    "description": "Generates a single declarative research position sentence from epistemic mode and tension.",
    "input": {
        "mode": {
            "type": "string",
            "enum": [
                "Problem-solving",
                "Exploratory",
                "Constructive",
                "Critical",
                "Hybrid"
            ],
            "description": "The epistemic research mode from EpistemicModeClassifier."
        },
        "tension": {
            "type": "object",
            "description": "The epistemic tension structure from TensionExtractor.",
            "properties": {
                "dominant_assumption": {
                    "type": "string"
                },
                "blind_spot": {
                    "type": "string"
                },
                "core_gap": {
                    "type": "string"
                }
            },
            "required": [
                "dominant_assumption",
                "blind_spot",
                "core_gap"
            ]
        }
    },
    "output": {
        "research_position": {
            "type": "string",
            "description": "A single declarative sentence reflecting the researcher's epistemic stance."
        }
    },
    "prompt_file": "prompt.md",
    "output_format": "json",
    "model_requirements": {
        "temperature": 0.4,
        "max_tokens": 200
    }
}