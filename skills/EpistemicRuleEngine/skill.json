{
    "skill_name": "EpistemicRuleEngine",
    "description": "Rule engine that uses epistemic_profile, keyword_map, and keyword_roles to dynamically determine dominant orientation, generate RQ templates, method bias, contribution bias, and logic pattern — without static lookup tables.",
    "input": {
        "epistemic_profile": {
            "type": "object",
            "description": "Normalised orientation scores (each 0–1, sum = 1).",
            "properties": {
                "exploratory": {
                    "type": "number"
                },
                "critical": {
                    "type": "number"
                },
                "problem_solving": {
                    "type": "number"
                },
                "constructive": {
                    "type": "number"
                }
            },
            "required": [
                "exploratory",
                "critical",
                "problem_solving",
                "constructive"
            ]
        },
        "keyword_map": {
            "type": "object",
            "description": "Keywords grouped by epistemic orientation.",
            "properties": {
                "exploratory": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "critical": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "problem_solving": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "constructive": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "exploratory",
                "critical",
                "problem_solving",
                "constructive"
            ]
        },
        "keyword_roles": {
            "type": "object",
            "description": "Maps each keyword term to its epistemic role.",
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "output": {
        "dominant_orientation": {
            "type": "string",
            "description": "The primary epistemic orientation with the highest weight."
        },
        "rq_templates": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "2–3 dynamically generated research question templates grounded in the actual keywords."
        },
        "method_bias": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "1–2 methodological leanings inferred from keyword semantics and orientation."
        },
        "contribution_bias": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "1–2 expected contribution types inferred from orientation and keywords."
        },
        "logic_pattern": {
            "type": "string",
            "description": "Expected reasoning chain inferred from the dominant orientation and keyword semantics."
        }
    },
    "prompt_file": "prompt.md",
    "output_format": "json",
    "model_requirements": {
        "temperature": 0.3,
        "max_tokens": 800
    }
}